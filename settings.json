{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
    "ENABLE_TOOL_SEARCH": "auto:5"
  },
  "permissions": {
    "allow": [
      "Bash",
      "Write",
      "Edit",
      "Read",
      "Glob",
      "Grep",
      "WebFetch",
      "WebSearch",
      "NotebookEdit",
      "mcp__playwright-mkb__browser_click",
      "mcp__playwright-mkb__browser_snapshot",
      "mcp__playwright-mkb__browser_navigate",
      "mcp__playwright-mkb__browser_type",
      "mcp__playwright-mkb__browser_fill_form",
      "mcp__playwright-mkb__browser_select_option",
      "mcp__playwright-mkb__browser_press_key",
      "mcp__playwright-mkb__browser_take_screenshot",
      "mcp__playwright-mkb__browser_tabs",
      "mcp__playwright-mkb__browser_hover",
      "mcp__playwright-mkb__browser_drag",
      "mcp__playwright-mkb__browser_wait_for",
      "mcp__playwright-mkb__browser_navigate_back",
      "mcp__playwright-mkb__browser_close",
      "mcp__playwright-mkb__browser_resize",
      "mcp__playwright-mkb__browser_console_messages",
      "mcp__playwright-mkb__browser_network_requests",
      "mcp__playwright-mkb__browser_handle_dialog",
      "mcp__playwright-mkb__browser_file_upload",
      "mcp__playwright-mkb__browser_evaluate",
      "mcp__playwright-mkb__browser_install",
      "mcp__playwright-mkb__browser_run_code",
      "mcp__chrome-devtools__click",
      "mcp__chrome-devtools__fill",
      "mcp__chrome-devtools__fill_form",
      "mcp__chrome-devtools__hover",
      "mcp__chrome-devtools__press_key",
      "mcp__chrome-devtools__take_snapshot",
      "mcp__chrome-devtools__take_screenshot",
      "mcp__chrome-devtools__navigate_page",
      "mcp__chrome-devtools__new_page",
      "mcp__chrome-devtools__list_pages",
      "mcp__chrome-devtools__select_page",
      "mcp__chrome-devtools__close_page",
      "mcp__chrome-devtools__evaluate_script",
      "mcp__chrome-devtools__handle_dialog",
      "mcp__chrome-devtools__upload_file",
      "mcp__chrome-devtools__wait_for",
      "mcp__chrome-devtools__resize_page",
      "mcp__chrome-devtools__emulate",
      "mcp__chrome-devtools__drag",
      "mcp__chrome-devtools__list_console_messages",
      "mcp__chrome-devtools__get_console_message",
      "mcp__chrome-devtools__list_network_requests",
      "mcp__chrome-devtools__get_network_request",
      "mcp__chrome-devtools__performance_start_trace",
      "mcp__chrome-devtools__performance_stop_trace",
      "mcp__chrome-devtools__performance_analyze_insight",
      "mcp__codex__codex",
      "mcp__codex__codex-reply"
    ],
    "deny": [
      "Bash(pip install*)",
      "Bash(pip3 install*)",
      "Bash(python -m pip install*)",
      "Bash(python3 -m pip install*)",
      "Bash(python -m venv*)",
      "Bash(python3 -m venv*)",
      "Bash(virtualenv *)",
      "Bash(npm install*)",
      "Bash(npm i *)",
      "Bash(yarn *)",
      "Bash(pnpm *)",
      "Bash(bun install*)",
      "Bash(bun add*)",
      "Bash(uv pip*)",
      "Bash(uv venv*)",
      "Bash(poetry install*)",
      "Bash(poetry add*)",
      "Bash(conda install*)",
      "Bash(conda create*)",
      "Bash(pip *install*)",
      "Bash(source */activate)",
      "Bash(source venv/bin/activate*)",
      "Bash(. venv/bin/activate*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/skills/notification-alert/scripts/check-and-enable.sh"
          }
        ]
      },
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/auto-git-pull.sh"
          }
        ]
      },
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/firecrawl-start.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Read|Edit|Glob|Grep",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/auto-git-pull-pre.sh"
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/restrict-cwd-edits.sh"
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/file-protection.sh"
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/security-scan.sh"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/block-host-installs.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/auto-format.sh"
          }
        ]
      },
      {
        "matcher": "Write|Edit|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/auto-git-push.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'tell application \"Terminal\" to activate' & say '入力待ちです' & osascript -e 'display dialog \"入力待ちです\" with title \"Claude Code\" buttons {\"OK\"} default button \"OK\"'"
          }
        ]
      },
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'tell application \"Terminal\" to activate' & say '許可が必要です' & osascript -e 'display dialog \"許可が必要です\" with title \"Claude Code\" buttons {\"OK\"} default button \"OK\"'"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "example-skills@anthropic-agent-skills": true,
    "document-skills@anthropic-agent-skills": true,
    "playwright@claude-plugins-official": true,
    "claude-mem@thedotmack": true
  },
  "alwaysThinkingEnabled": true,
  "teammateMode": "in-process",
  "feedbackSurveyState": {
    "lastShownTime": 1754026768941
  },
  "skipDangerousModePermissionPrompt": true
}
